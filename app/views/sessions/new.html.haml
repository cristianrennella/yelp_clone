%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: sessions_path, class: 'sign_in', method: 'post' do |f|
        %header
          %h1 Log In
        = f.email_field :email
        = f.password_field :password
        = f.submit "Log In", class: 'btn btn-success'